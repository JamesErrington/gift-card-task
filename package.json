{
  "name": "amex-task",
  "version": "1.0.0",
  "description": "React-based gift card site",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --fix --color .",
    "clean": "rimraf build",
    "build:server": "tsc --build app && copyfiles -u 1 app/static/* build",
    "build:client": "webpack --mode production",
    "watch": "webpack --watch --mode development & nodemon",
    "build": "npm run clean && npm run build:server && npm run build:client",
    "start": "node build/index.js",
    "test:server": "jest app/test --config app/jest.config.js",
    "test:client": "jest client/test --config client/jest.config.js"
  },
  "author": "James Errington <james.errington@protonmail.com>",
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-react": "^7.16.7",
    "@testing-library/react": "^12.1.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/mock-fs": "^4.13.1",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.8",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.1.5",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "babel-loader": "^8.2.3",
    "copy-webpack-plugin": "^10.2.0",
    "copyfiles": "^2.4.1",
    "css-loader": "^6.5.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "history": "^5.2.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.4.7",
    "mini-css-extract-plugin": "^2.4.6",
    "mock-fs": "^5.1.2",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.2",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "express": "^4.17.2",
    "multer": "^1.4.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "semantic-ui-react": "^2.0.4",
    "uuid": "^8.3.2"
  }
}
